/**index.wxss**/
/**以下控制轮播图**/
.swiper {
  margin: 0 auto;
  width: 750rpx;
  height: 430rpx;
}
.image {
  width: 100%;
}

/**以下控制菜单栏**/
.showMenu {
  width: 100%;
  margin: 15rpx 0;
  height: 150rpx;
  }
.showMenu:after{  
  content: "";  
  display: block;  
  clear: both;  
}  
.menuList{  
  float: left;  
  width: 25%;  
  box-sizing: border-box;  
  padding-bottom: 10px;  
}  
.menuImg {  
  width: 120rpx;  
  height: 120rpx;  
  display: block;  
  margin: 0 auto;  
  margin-bottom: 5px;  
} 
.menuDesc{  
  background-color: #ffffff;  
  color: #333333;  
  width: 100%;  
  text-align: center;
  display: block;  
  font-size: 25rpx; 
}  
 
.gap-1 {
  margin-top: 3px;   
  width: 100%;  
  height: 5rpx;  
  background: #EEEEEE;  
}

/**以下控制公告栏**/
.list {
  margin: 3px 8px;
  height: 420rpx;
  border: 2px solid #FFFFFF;
  border-radius: 5px;
  box-shadow: 4px 1px 1px #cccccc;
  position: relative;
  background-color: hsl(270, 50%, 80%);
