}
.bulletinTitle {
  margin-top: 7px;
  text-align: center;
  font-size: 22px;
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
}
.listItem {
  border: solid 1px;
  border-radius: 5px;
  border-color: hsl(285, 90%, 90%);
  background-color: hsl(285, 90%, 90%);
  margin: 8px 8px;
  align-items: left;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
}
.bulletin {
  margin: 10px;
  font-size: 40rpx;
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  text-align: center;
}
.icon {
  width: 12px;
  height: 12px;
}