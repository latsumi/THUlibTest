<!--pages/toWork/editQuestionnaire/editQuestionnaire.wxml-->

<form bindsubmit="save">
<label class="label">1.问卷标题</label>
<view class="log-list border">
<input name="title" type="text" value="{{title}}" placeholder="标题"/>
</view>

<label class="label">2.问卷类型</label>
<view class="log-list">
    <radio-group bindchange="bindRadioChange" class="radio" name="type" >
     <label wx:for="{{radioType}}" wx:key="">
        <radio value="{{item.value}}"/>{{item.name}}
    </label>
  </radio-group>
  </view>

<label class="label">3.问卷描述</label>
<view class="log-list border">
<textarea name="context" value="{{context}}" auto-height placeholder="填写须知，截止日期等" maxlength="-1"/>
</view>

<label class="label">4.班次选项描述</label>
<view class="log-list border">
<textarea name="context" value="{{context}}" auto-height placeholder="对班次选项和上班时间的描述" value="{{detail}}" maxlength="-1"/>
</view>

<block wx:if="{{isClass}}">
  <label class="label"> 5.选择可报班次</label>
  <view class="log-list">
    <checkbox-group  class="checkboxGroup" name="classes">
      <label wx:for="{{canIChoose}}" wx:key="">
       <checkbox style="margin-bottom:12px;margin-right:5px;" value="{{canIChoose[index]}}"/>{{canIChoose[index]}}
     </label>
    </checkbox-group>
  </view>
  </block>
<view class="submit"><button type="primary" form-type="submit">发布</button></view>
</form>

<form bindsubmit="deleteQues">
<view class="submit" ><button type="warn" form-type="submit">删除</button></view>
</form>