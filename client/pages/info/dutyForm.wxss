.table {
  border: 0px solid darkgray;
  margin-bottom: 200rpx;
}
.dutySwiper {
  margin: 10px auto;
  width: 750rpx;
  height: 1200rpx;
}
.tr {
  display: flex;
  width: 100%;
  height: 5rem;
  justify-content: center;
  align-items: center;
}
.week {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  height: 3rem;
}
.detail {
  width:60%;
  justify-content: center;
  text-align: center;
}
.bg-title{
  background-color: hsl(270, 60%, 80%);
}
.bg-detail{
  background: hsl(270, 95%, 95%);
}
.th {
  width: 60%;
  justify-content: center;
  display: flex;
  align-items: center;
}